FROM node:18-slim

# Install Playwright required dependencies
RUN apt-get update && apt-get install -y \
    # Basic utilities
    curl \
    wget \
    gnupg \
    ca-certificates \
    # Playwright browser dependencies
    libnss3 \
    libnspr4 \
    libatk-bridge2.0-0 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libxss1 \
    libgconf-2-4 \
    libxtst6 \
    libxrandr2 \
    libasound2 \
    libpangocairo-1.0-0 \
    libatk1.0-0 \
    libcairo-gobject2 \
    libgtk-3-0 \
    libgdk-pixbuf2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Create user and directory
RUN useradd -m appuser
WORKDIR /home/appuser/app

# Copy dependency files and install npm dependencies
COPY package*.json ./
RUN npm install

# Install Playwright system dependencies (requires root privileges)
RUN npx playwright install-deps chromium

# Switch to appuser and set working directory ownership
RUN chown -R appuser:appuser /home/appuser
USER appuser

# Install Playwright browsers as appuser (ensure installation to correct user cache directory)
RUN npx playwright install chromium

# Copy source code
COPY --chown=appuser:appuser . .

CMD ["npm", "run", "dev"]
